<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--TODO 1: Add a text field that displays the results-->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <!--TODO 2: Add all the buttons-->
    <TextView
        android:id="@+id/tvAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="AC"
        app:layout_constraintBottom_toTopOf="@+id/tv7"
        app:layout_constraintEnd_toStartOf="@+id/tvOpeningBracket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

    <TextView
        android:id="@+id/tvOpeningBracket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="("
        app:layout_constraintBottom_toTopOf="@+id/tv8"
        app:layout_constraintEnd_toStartOf="@+id/tvClosingBracket"
        app:layout_constraintStart_toEndOf="@+id/tvAC"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
         />

    <TextView
        android:id="@+id/tvClosingBracket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text=")"
        app:layout_constraintBottom_toTopOf="@+id/tv9"
        app:layout_constraintEnd_toStartOf="@+id/tvDivide"
        app:layout_constraintStart_toEndOf="@+id/tvOpeningBracket"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
         />

    <TextView
        android:id="@+id/tvDivide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/tvMultiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvClosingBracket"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
         />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/tv4"
        app:layout_constraintEnd_toStartOf="@+id/tv8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAC"
         />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/tv5"
        app:layout_constraintEnd_toStartOf="@+id/tv9"
        app:layout_constraintStart_toEndOf="@+id/tv7"
        app:layout_constraintTop_toBottomOf="@+id/tvOpeningBracket"
         />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/tv6"
        app:layout_constraintEnd_toStartOf="@+id/tvMultiply"
        app:layout_constraintStart_toEndOf="@+id/tv8"
        app:layout_constraintTop_toBottomOf="@+id/tvClosingBracket"
         />

    <TextView
        android:id="@+id/tvMultiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/tvSubstract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv9"
        app:layout_constraintTop_toBottomOf="@+id/tvDivide"
         />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/tv1"
        app:layout_constraintEnd_toStartOf="@+id/tv5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv7"
         />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        app:layout_constraintEnd_toStartOf="@+id/tv6"
        app:layout_constraintStart_toEndOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv8"
         />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/tv3"
        app:layout_constraintEnd_toStartOf="@+id/tvSubstract"
        app:layout_constraintStart_toEndOf="@+id/tv5"
        app:layout_constraintTop_toBottomOf="@+id/tv9"
         />

    <TextView
        android:id="@+id/tvSubstract"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/tvAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv6"
        app:layout_constraintTop_toBottomOf="@+id/tvMultiply"
         />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/tv0"
        app:layout_constraintEnd_toStartOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
         />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/tvDot"
        app:layout_constraintEnd_toStartOf="@+id/tv3"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv5"
         />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/tvBackspace"
        app:layout_constraintEnd_toStartOf="@+id/tvAdd"
        app:layout_constraintStart_toEndOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tv6"
         />

    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@id/tvEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tvSubstract"
         />

    <TextView
        android:id="@+id/tv0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
         />

    <TextView
        android:id="@+id/tvDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvBackspace"
        app:layout_constraintStart_toEndOf="@+id/tv0"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
         />
    <TextView
        android:id="@+id/tvBackspace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="Backspace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEqual"
        app:layout_constraintStart_toEndOf="@+id/tvDot"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        />

    <TextView
        android:id="@+id/tvEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBackspace"
        app:layout_constraintTop_toBottomOf="@+id/tvAdd"/>

</androidx.constraintlayout.widget.ConstraintLayout>
